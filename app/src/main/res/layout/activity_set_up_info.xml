<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SetUpInfo"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_actionbar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D4D4D4"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compila i campi per continuare"
        android:textColor="#D4D4D4"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D4D4D4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome e Cognome"
        android:textColor="#545454"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_name_surname"
        android:hint="es: Mario Rossi"
        android:textColorHint="#D4D4D4"
        android:background="@drawable/ic_edittextbakcground"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="textPersonName"
        android:imeOptions="actionSend"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imposta email destinatario"
        android:textColor="#545454"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_email_reciever"
        android:hint="Inserisci email del medico"
        android:textColorHint="#D4D4D4"
        android:background="@drawable/ic_edittextbakcground"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionSend"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Imposta email risposta"
        android:textColor="#545454"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_email_response"
        android:hint="Inserisci email che risponderÃ "
        android:textColorHint="#D4D4D4"
        android:background="@drawable/ic_edittextbakcground"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:imeOptions="actionSend"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_bluebutton"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        android:text="Avanti"/>

</LinearLayout>